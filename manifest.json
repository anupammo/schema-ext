{
  "manifest_version": 3,
  "name": "Schema Craft",
  "description": "Generate Schema.org JSON-LD tags for Article, Breadcrumb, FAQ, Local Business, Organization, and Profile Page.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scanner.js"],
      "run_at": "document_idle"
    }
  ]
}
